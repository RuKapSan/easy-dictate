{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Easy Dictate",
  "version": "0.2.4",
  "identifier": "com.easydictate.desktop",
  "build": {
    "frontendDist": "../frontend",
    "beforeDevCommand": "cargo run --manifest-path src-tauri/Cargo.toml --bin dev-server",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Easy Dictate",
        "width": 820,
        "height": 680,
        "minWidth": 720,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": false
      },
      {
        "label": "overlay",
        "url": "overlay.html",
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "skipTaskbar": true,
        "visible": false,
        "fullscreen": false,
        "resizable": false,
        "shadow": false,
        "width": 600,
        "height": 150
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; connect-src 'self' wss://api.elevenlabs.io wss://*.elevenlabs.io https://api.elevenlabs.io https://api.groq.com https://api.openai.com https://generativelanguage.googleapis.com https://api.anthropic.com; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/RuKapSan/easy-dictate/releases/latest/download/latest.json"
      ]
    }
  }
}