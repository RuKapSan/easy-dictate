{
  "name": "easy-dictate-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Easy Dictate Tauri application",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.ts",
    "test:headless": "wdio run wdio.conf.ts --headless",
    "test:debug": "wdio run wdio.conf.ts --logLevel=debug",
    "test:watch": "wdio run wdio.conf.ts --watch",
    "setup:audio": "ts-node scripts/setup-audio.ts",
    "report": "allure generate allure-results --clean -o allure-report && allure open",
    "clean": "rimraf screenshots logs allure-results allure-report"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@wdio/allure-reporter": "^8.29.0",
    "@wdio/cli": "^8.29.0",
    "@wdio/json-reporter": "^8.29.0",
    "@wdio/local-runner": "^8.29.0",
    "@wdio/mocha-framework": "^8.29.0",
    "@wdio/spec-reporter": "^8.29.0",
    "allure-commandline": "^2.25.0",
    "rimraf": "^5.0.5",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wdio-video-reporter": "^6.2.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "tauri",
    "webdriverio"
  ]
}
